# API Keys for Various Services
# -----------------------------
# Copy this file to .env and fill in your API keys

# Groq API
# Get your API key from https://console.groq.com/keys
GROQ_API_KEY = ""

# OpenAI API
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY = ""

# Cohere API
# Get your API key from https://dashboard.cohere.com/api-keys
COHERE_API_KEY = ""

# Azure OpenAI API (optional)
# Get these values from your Azure OpenAI resource
AZURE_OPENAI_API_KEY = ""
AZURE_OPENAI_API_BASE = ""
AZURE_OPENAI_API_VERSION = "2023-05-15"
AZURE_OPENAI_DEPLOYMENT_NAME = ""

# Logging Configuration
# --------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL = "INFO"
# Log to file: true or false
LOG_TO_FILE = "true"
# Log file path (optional, defaults to ./logs)
LOG_PATH = "./logs"

# Security Settings
# ----------------
# Enable input sanitization (recommended)
ENABLE_INPUT_SANITIZATION = "true"
# Enable API key validation (recommended)
ENABLE_API_KEY_VALIDATION = "true"

# Development Settings
# -------------------
# Set to 'development' to enable debug features
ENVIRONMENT = "production"
